extends layout

block content
  .row
    .col-xs-6.col-md-2
      .temp-display
        .temp-dis Current:
        #temp.temp #{temp}
    .col-xs-6.col-md-2
      .temp-display
        .temp-dis Target:
        #target.temp #{target}
    .col-xs-12.col-md-8.messages
      -if (messages.errors)
        .alert.alert-danger
          p Error:
          ul
            -each message in messages.errors
              li #{message.msg}. Value: #{message.value}
      -if (messages.success)
        .alert.alert-success
          p
            strong Success!:&nbsp;
            -each message in messages.success
              span= message
  .row
    .col-xs-12.col-md-3.col-md-offset-2
      form(name="target", action="/target", method="post", id="target-form")
        p Set target:
        input(type="text", name="target", value=target, class="tmp-target")
        input(type="submit", name="save", value="Save")
  .row
    .col-xs-12
      #placeholder.col-xs-12
2  .row
    .col-xs-12
      form(name="edit", action="/", method="post")
        input(type="submit", value="Clear")
        
