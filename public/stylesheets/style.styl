@font-face
  font-family: 'DSDIGI'
  src: url('../fonts/DSDIGI.eot')
  src: local('DSDIGI'), url('../fonts/DSDIGI.woff') format('woff'), url('../fonts/DSDIGI.ttf') format('truetype')

body
  padding-top 60px

#placeholder
  height 600px
  .progress
    margin-top: 5em;

.temp-display
  background-color #a5b5a5
  margin-bottom 1.3em
  padding 0.2em
  border 2px solid #333
  height: 7.5em;

.temp-dis
  text-align center
  font-family 'DSDIGI'

.temp
  font-family 'DSDIGI'
  font-size 5em
  text-align center
  line-height: 1em;

.loading
  border 1px solid black
  height 100%

w = 200px
h = 6px

half(n)
  n / 2

.loader
  position absolute
  display block
  left 50%
  width w
  height h
  margin-left (w*-1)
  margin-top 294px

.loader:before
  content ""
  display block
  width 10%
  height 100%
  background-color #a5b5a5
  animation loader 6s ease 0s infinite

vendors = official

@keyframes loader
  0%
    margin 0 99% 0 0
    width 1%
  25%
    margin 0
    width 100%
  50%
    margin 0 0 0 99%
    width 1%
  75%
    margin 0
    width 100%
  100%
    margin 0 99% 0 0
    width 1%
